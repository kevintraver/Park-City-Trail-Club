<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Middleman" %></title>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>

    <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" %>
    <%= javascript_include_tag "https://storage.googleapis.com/code.getmdl.io/1.0.2/material.min.js" %>
    <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/in-view@0.6.1/dist/in-view.min.js" %>
    <%= stylesheet_link_tag "https://storage.googleapis.com/code.getmdl.io/1.0.2/material.blue-orange.min.css" %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>

  </head>
  <body>

    <div class="mdl-layout mdl-layout--fixed-header">
      <header class="mdl-layout__header">
        <div class="mdl-layout__header-row">
          <div class="mdl-layout-spacer"></div>
          <nav class="mdl-navigation ">
            <a class="mdl-navigation__link" href="">Local Routes</a>
            <a class="mdl-navigation__link" href="">Upcoming Events</a>
            <a class="mdl-navigation__link" href="">Gallery</a>
          </nav>
        </div>
      </header>

      <main class="mdl-layout__content">
        <div class="page-content">
          <%= yield %>
        </div>
      </main>
    </div>


  </body>
</html>
