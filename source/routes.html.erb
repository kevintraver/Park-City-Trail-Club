<div class="mdl-grid">

  <% dato.locations.each do |location| %>

    <div class="mdl-cell mdl-cell--4-col mdl-cell--6-col-tablet mdl-cell--12-col-tablet">
      <div class="route mdl-shadow--2dp">

        <div class="mdl-card__media">
          <img class="route-main-image"
          src="<%= location.main_image.try(:url) %>"
          data-main-image="<%= location.main_image.try(:url) %>"
          data-main-image-animated="<%= location.main_image_animated.try(:url) %>"
          style="width: 100%">
        </div>

        <div class="mdl-card__title mdl-card--expand">
          <h2 class="mdl-card__title-text">
            <%= link_to location.title, "/locations/#{location.slug}.html" %>
          </h2>
        </div>
        <div class="mdl-card__supporting-text">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit.
          Aenan convallis.
        </div>
      </div>
    </div>


  <% end %>


</div>

